<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlack"
    tools:context=".main.AddComponentFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/backButton_addingFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightBlack"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            <EditText
                android:id="@+id/title_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/edittextshape"
                android:ems="10"
                android:gravity="center"
                android:hint="Title"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/title_length_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="360dp"
                android:text="25"
                android:textColor="@color/fadeWhite" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Component_ImageView"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:visibility="visible"
                    android:layout_marginLeft="120dp"
                    tools:src="@tools:sample/avatars" />
                <ImageButton
                    android:id="@+id/component_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/ic_baseline_image_24" />
        </LinearLayout>
            <EditText
                android:id="@+id/descreption_EditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/edittextshape"
                android:ems="10"
                android:gravity="start|center_horizontal|top"
                android:hint=" Descreption ..."
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/functionlity_EditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextshape"
                android:ems="10"
                android:gravity="start|center_horizontal|top"
                android:hint="Functionlaity ..."
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/equations_editText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextshape"
                android:ems="10"
                android:gravity="left"
                android:hint=" Equations ..."
                android:inputType="textMultiLine"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/source1_EditText"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextshape"
                android:layout_gravity="center"
                android:ems="10"
                android:hint=" Source 1"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/source2_EditText"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:background="@drawable/edittextshape"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint=" Source 2"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/source3_EditText"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextshape"
                android:layout_gravity="center"
                android:ems="10"
                android:hint=" Source 3"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/add_component"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gray"
                android:minHeight="32dp"
                android:text="add" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>