<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_eng_guide"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.engineersguide.identity.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_componentsFragment"
            app:destination="@id/componentsFragment" />
    </fragment>
<!--    //popUpTo used to stop undoing the fragment again and again ..-->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.engineersguide.identity.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/componentsFragment"
        android:name="com.example.engineersguide.main.ComponentsFragment"
        android:label="fragment_components"
        tools:layout="@layout/fragment_components" >
        <action
            android:id="@+id/action_componentsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>
