<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_eng_guide"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.engineersguide.identity.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_componentsFragment"
            app:destination="@id/componentsFragment" />
    </fragment>
<!--    //popUpTo used to stop undoing the fragment again and again ..-->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.engineersguide.identity.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/componentsFragment"
        android:name="com.example.engineersguide.main.ComponentsFragment"
        android:label="Components">
        <action
            android:id="@+id/action_componentsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_componentsFragment_to_addingComponentsFragment"
            app:destination="@id/addingComponentsFragment" />
        <action
            android:id="@+id/action_componentsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_componentsFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_componentsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addingComponentsFragment"
        android:name="com.example.engineersguide.main.AddingComponentsFragment"
        android:label="Add Component">
        <action
            android:id="@+id/action_addingComponentsFragment_to_componentsFragment"
            app:destination="@id/componentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.engineersguide.main.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_webFragment"
            app:destination="@id/webFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_componentsFragment"
            app:destination="@id/componentsFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/webFragment"
        android:name="com.example.engineersguide.main.WebFragment"
        android:label="Browser"
        tools:layout="@layout/fragment_web" />
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.engineersguide.main.EditFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_edit">
        <action
            android:id="@+id/action_editFragment_to_componentsFragment"
            app:destination="@id/componentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.engineersguide.main.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
